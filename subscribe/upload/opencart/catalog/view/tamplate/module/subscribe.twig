
<h3>{{ heading_title }}</h3>

  <div class="form-group">
    <div class="row">
                <label for="input-email" class="col-sm-2 control-label">{{ text_email }}</label>
                <div class="col-sm-8">
                  <input type="text" name="email"  placeholder="{{ text_placeholder }}" id="input-email" class="form-control"/>
                </div>
                <div class="col-sm-2 my-1">
                  <a id="subscribe" class="btn btn-success">{{ btn_subscribe }}</a>
                </div>
    </div>
    <div class="row my-1">
      <div id="subscribe-output"></div>
    </div>
  </div>


  <script type="text/javascript">

  $('#subscribe').on('click', function () {

    let $email = $('#input-email').val();

    if ($email != ""){

      let $data = {
        email: $email
      }

      $.ajax({
            url: 'index.php?route=extension/opencart/module/subscribe.addEmail',
            type: 'POST',
            data: $data,
            dataType: 'json',
            success: function () {
              console.log('subscribed');
            }
            })
          .done(
            $('#subscribe-output').html('<p class="alert alert-success">Subscribed!</p>')
          );

    } else {

      $('#subscribe-output').html('<p class="alert alert-danger">Please enter an email to subscribe!</p>');

    }

  });

  </script>




